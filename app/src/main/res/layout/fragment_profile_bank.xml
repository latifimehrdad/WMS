<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="bank"
            type="com.example.wms.viewmodels.user.profile.FragmentProfileBankViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_50sdp"
        android:paddingRight="@dimen/_50sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp"
        android:gravity="center"
        android:background="@color/mlWhite"
        >



        <EditText
            android:id="@+id/editAccountNumber"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/edit_normal_background"
            android:hint="@string/AcountNumber"
            android:inputType="number"
            android:padding="@dimen/_2sdp"
            android:textColor="@color/mlBlack"
            android:textSize="@dimen/_12sdp"
            />


        <LinearLayout
            android:id="@+id/LayoutBank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@color/mlEdit"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:src="@drawable/ic_arrow_drop_down_black_24dp"
                android:tint="@color/mlBlack"
                />

            <TextView
                android:id="@+id/TextBank"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/mlBlack"
                android:gravity="right"
                android:textSize="@dimen/_12sdp"
                android:padding="@dimen/_5sdp"
                />




        </LinearLayout>


        <Button
            android:id="@+id/btnSendAccountNumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_50sdp"
            android:layout_marginRight="@dimen/_25sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/save_info_button"
            android:text="@string/Save"
            android:textColor="@color/mlWhite"
            android:textSize="@dimen/_13sdp" />



    </LinearLayout>


</layout>
