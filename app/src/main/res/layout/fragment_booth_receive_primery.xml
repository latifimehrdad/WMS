<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

        <variable
            name="VM_BoothReceivePrimary"
            type="com.example.wms.viewmodels.collectrequest.boothreceive.VM_BoothReceivePrimary" />

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/fpraMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            tools:context=".Activity.MapsActivity" />

        // Center
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.3"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mlBlack"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/KGr"
                        />

                    <TextView
                        android:id="@+id/TextViewCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mlBlack"
                        android:textSize="@dimen/_10sdp"
                        android:background="@drawable/layout_border_black"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        />

                    <ImageView
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:src="@drawable/logobag"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/MaterialSpinnerSpinnerDay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:prompt="@string/City_Prompt"
                    app:ms_background_color="@color/mlEdit"
                    app:ms_text_color="@color/mlBlack"
                    />


            </LinearLayout>





        </LinearLayout>
        // Center


        // List

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewBooths"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
        // List



    </LinearLayout>


</layout>
