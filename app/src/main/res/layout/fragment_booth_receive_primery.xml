<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="boothreceiveprimery"
            type="com.example.wms.viewmodels.collectrequest.boothreceive.FragmentBoothReceivePrimeryViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            tools:context=".Activity.MapsActivity" />

        // Center
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.3"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mlBlack"
                        android:textSize="@dimen/_10sdp"
                        android:text="@string/KGr"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mlBlack"
                        android:textSize="@dimen/_10sdp"
                        android:text="10"
                        android:background="@drawable/layout_border_black"
                        android:paddingRight="@dimen/_15sdp"
                        android:paddingLeft="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/logobag"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>






            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/FBRPSpinnerHours"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:prompt="@string/City_Prompt"
                    app:ms_background_color="@color/mlEdit"
                    app:ms_text_color="@color/mlBlack"
                    android:layout_marginRight="@dimen/_10sdp"
                    />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/FBRPSpinnerDay"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:prompt="@string/City_Prompt"
                    app:ms_background_color="@color/mlEdit"
                    app:ms_text_color="@color/mlBlack"
                    />

            </LinearLayout>



        </LinearLayout>
        // Center


        // List
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:background="@drawable/layout_border_orange"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    >

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="right|top"
                        android:maxLines="3"
                        android:textColor="@color/mlCollectBooth"
                        android:textSize="@dimen/_10sdp"
                        android:text="مسئول غرفه : خانم حیدری"
                        />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:layoutDirection="rtl"
                        android:gravity="center_vertical"
                        >

                        <ImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:src="@drawable/logobooth"
                            android:tint="@color/mlCollectBooth"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_3sdp"
                            android:textColor="@color/mlCollectBooth"
                            android:textSize="@dimen/_9sdp"
                            android:text="غرفه شماره 1"
                            android:gravity="right|top"
                            android:layout_marginRight="@dimen/_3sdp"

                            />



                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/save_info_button"
                        android:text="@string/Choose"
                        android:textColor="@color/mlWhite"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/mlCollectBooth"
                        android:textSize="@dimen/_9sdp"
                        android:text="آدرس : کرج - سه راه گوهردشت - برج آرمان"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>




            </LinearLayout>


        </LinearLayout>
        // List



    </LinearLayout>


</layout>
