<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="requstaddress"
            type="com.example.wms.viewmodels.packrequest.FragmentPackRequestAddressViewModel" />
    </data>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <fragment
            android:id="@+id/fpraMap"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            tools:context=".Activity.MapsActivity" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mlEdit"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/fpraEditAddress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="کرج - گوهرداشت"
                android:textSize="@dimen/_10sdp"
                android:padding="@dimen/_2sdp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:src="@drawable/ic_edit_location_black_24dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                >

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/FPRAMaterialSpinnerTypeCount"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:prompt="@string/City_Prompt"
                    app:ms_background_color="@color/mlEdit"
                    app:ms_text_color="@color/mlBlack"
                    android:layout_marginRight="@dimen/_10sdp"
                    />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/FPRAMaterialSpinnerType"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:prompt="@string/City_Prompt"
                    app:ms_background_color="@color/mlEdit"
                    app:ms_text_color="@color/mlBlack"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                >

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/FPRAMaterialSpinnerCount"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:prompt="@string/City_Prompt"
                    app:ms_background_color="@color/mlEdit"
                    app:ms_text_color="@color/mlBlack"
                    android:layout_marginRight="@dimen/_10sdp"
                    />

                <com.jaredrummler.materialspinner.MaterialSpinner
                    android:id="@+id/FPRAMaterialSpinnerUser"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_weight="1"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="right"
                    android:prompt="@string/City_Prompt"
                    app:ms_background_color="@color/mlEdit"
                    app:ms_text_color="@color/mlBlack"
                    />

            </LinearLayout>

            <Button
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/save_info_button"
                android:text="@string/Save"
                android:textColor="@color/mlWhite"
                android:textSize="@dimen/_12sdp" />





        </LinearLayout>

    </LinearLayout>

</layout>
