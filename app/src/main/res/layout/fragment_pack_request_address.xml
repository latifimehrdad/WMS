<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    >

    <data>

        <variable
            name="requstaddress"
            type="com.example.wms.viewmodels.packrequest.FragmentPackRequestAddressViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">


            <fragment
                android:id="@+id/fpraMap"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Activity.MapsActivity" />

            <ImageView
                android:id="@+id/imgFullScreen"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@drawable/save_info_button"
                android:src="@drawable/ic_fullscreen"
                android:padding="@dimen/_1sdp"
                android:tint="@color/mlWhite"
                />

            <LinearLayout
                android:id="@+id/centerLayout"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:orientation="vertical" />


            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_60sdp"
                android:layout_above="@id/centerLayout"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/LayoutChoose"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/choose_current_map">

                    <com.cunoraz.gifview.library.GifView
                        android:id="@+id/MarkerGif"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        custom:gif="@drawable/markermap"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        />

                    <TextView
                        android:id="@+id/textChoose"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="@string/Choose"
                        android:textColor="@color/mlWhite"
                        android:textSize="@dimen/_8sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        fontPath="font/iransans_web_medium.ttf"
                        android:visibility="gone"
                        />



                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/_1sdp"
                    android:layout_height="match_parent"
                    android:background="@color/mlBlack" />


            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mlEdit"
            android:gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/fpraEditAddress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:maxLines="2"
                android:minHeight="@dimen/_30sdp"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textSize="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_2sdp"
                android:src="@drawable/ic_edit_location_black_24dp" />

        </LinearLayout>


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">


                    <EditText
                        android:id="@+id/UnitCount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@color/mlEdit"
                        android:hint="@string/UnitCount"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/mlBlack" />


                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/FPRAMaterialSpinnerType"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:prompt="@string/City_Prompt"
                        app:ms_background_color="@color/mlEdit"
                        app:ms_text_color="@color/mlBlack" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/PersonCount"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:background="@color/mlEdit"
                        android:hint="@string/PersonCount"
                        android:inputType="number"
                        android:maxLength="3"
                        android:maxLines="1"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:textColor="@color/mlBlack" />

                    <com.jaredrummler.materialspinner.MaterialSpinner
                        android:id="@+id/FPRAMaterialSpinnerUser"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:prompt="@string/City_Prompt"
                        app:ms_background_color="@color/mlEdit"
                        app:ms_text_color="@color/mlBlack" />

                </LinearLayout>

                <Button
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/save_info_button"
                    android:text="@string/Save"
                    android:textColor="@color/mlWhite"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</layout>
