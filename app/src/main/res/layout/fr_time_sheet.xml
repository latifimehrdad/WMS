<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="timesheer"
            type="com.ngra.wms.viewmodels.collectrequest.VM_TimeSheet" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.cunoraz.gifview.library.GifView
            android:id="@+id/gifLoading"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:visibility="gone"
            custom:gif="@drawable/loading2"
            android:background="@drawable/dw_button_game"
            android:padding="@dimen/_5sdp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewDates"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            tools:listitem="@layout/adapter_item_date"
            tools:itemCount="1"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerViewTimes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            tools:listitem="@layout/adapter_item_time"
            tools:itemCount="1"/>


        <LinearLayout
            android:id="@+id/LinearLayoutNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/save_info_button"
            android:gravity="center">

            <TextView
                android:id="@+id/TextViewSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_10sdp"
                android:textColor="@color/mlWhite"
                android:paddingRight="@dimen/_10sdp"
                android:paddingLeft="@dimen/_10sdp"
                android:text="@string/NextStep"/>


            <ImageView
                android:id="@+id/ImageViewSend"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/svg_arrow_left"
                android:padding="@dimen/_2sdp"
                android:tint="@color/mlWhite"/>

            <com.cunoraz.gifview.library.GifView
                android:id="@+id/gifLoadingSend"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:visibility="gone"
                custom:gif="@drawable/loading2" />

        </LinearLayout>

    </LinearLayout>

</layout>
