<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="requestprimery"
            type="com.example.wms.viewmodels.packrequest.FragmentPackRequestPrimeryViewModel" />
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/FPRPSpinnerHours"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="right"
                android:prompt="@string/City_Prompt"
                app:ms_background_color="@color/mlEdit"
                app:ms_text_color="@color/mlBlack"
                android:layout_marginRight="@dimen/_10sdp"
                />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/FPRPSpinnerDay"
                android:layout_width="0dp"
                android:layout_height="@dimen/_30sdp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="right"
                android:prompt="@string/City_Prompt"
                app:ms_background_color="@color/mlEdit"
                app:ms_text_color="@color/mlBlack"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/layout_border_black"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:src="@drawable/ic_date_range_black_24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mlHeader"
                    android:text="98/09/10"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    />

                <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:src="@drawable/ic_access_time_black_24dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/mlHeader"
                    android:text="23:50"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginLeft="@dimen/_2sdp"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                >

                <params.com.stepview.StatusViewScroller
                    android:id="@+id/FPRPStatuseViewScroller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:padding="@dimen/_2sdp"
                    app:stepCount="3"
                    app:currentCount="2"
                    app:circleColorType="fill"
                    app:circleRadius="@dimen/_15sdp"
                    app:lineWidth="5dp"
                    app:lineLength="@dimen/_60sdp"
                    app:lineColor="@color/colorPrimary"
                    app:lineColorIncomplete="@color/mlFooter"
                    app:lineColorCurrent="@color/colorPrimary"
                    app:circleColor="@color/colorPrimary"
                    app:circleColorCurrent="@color/colorPrimary"
                    app:circleColorIncomplete="@color/mlHeader"
                    app:textColorLabels="@color/mlWhite"
                    app:textColorLabelsCurrent="@color/mlWhite"
                    app:textColorLabelsIncomplete="@android:color/black"
                    app:circleStrokeWidth="5dp"
                    app:circleStrokeColorIncomplete="@color/mlFooter"
                    app:circleStrokeColorCurrent="@color/colorPrimary"
                    app:circleStrokeColor="@color/colorPrimary"
                    app:completeDrawable="@drawable/ic_check_black_24dp"
                    app:currentDrawable="@drawable/ic_hourglass_empty_black_24dp"
                    app:incompleteDrawable="@drawable/ic_done_all_black_24dp"
                    />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/FPRPStatuseViewScroller"
                    android:layout_alignStart="@id/FPRPStatuseViewScroller"
                    android:layout_alignEnd="@id/FPRPStatuseViewScroller"
                    android:layout_alignLeft="@id/FPRPStatuseViewScroller"
                    android:layout_alignRight="@id/FPRPStatuseViewScroller"
                    android:layout_marginTop="@dimen/_2sdp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mlBlack"
                        android:textSize="@dimen/_9sdp"
                        android:text="@string/FragmentPackRequestPrimerySet"
                        android:layout_alignParentLeft="true"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mlBlack"
                        android:textSize="@dimen/_9sdp"
                        android:text="@string/FragmentPackRequestPrimeryReceive"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="@dimen/_5sdp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mlBlack"
                        android:textSize="@dimen/_9sdp"
                        android:text="@string/FragmentPackRequestPrimerySend"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/layout_border_black"
                        />

                </RelativeLayout>

            </RelativeLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/save_info_button"
                android:text="@string/Save"
                android:textColor="@color/mlWhite"
                android:textSize="@dimen/_12sdp" />







        </LinearLayout>

    </LinearLayout>

</layout>
