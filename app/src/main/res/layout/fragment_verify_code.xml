<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="verifycode"
            type="com.example.wms.viewmodels.user.register.VM_FragmentVerifyCode" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.fragments.user.register.FragmentVerifyCode">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mlWhite"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:gravity="center"
                        android:text="@string/VerifyAccount"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_15sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/VerifyCode"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_10sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/VerifyCode1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:minWidth="@dimen/_25sdp"
                                android:minHeight="@dimen/_35sdp"
                                android:padding="@dimen/_2sdp"
                                android:textColor="@color/mlBlack"
                                android:textSize="@dimen/_14sdp" />

                            <EditText
                                android:id="@+id/VerifyCode2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:minWidth="@dimen/_25sdp"
                                android:minHeight="@dimen/_35sdp"
                                android:padding="@dimen/_2sdp"
                                android:textColor="@color/mlBlack"
                                android:textSize="@dimen/_14sdp" />

                            <EditText
                                android:id="@+id/VerifyCode3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:minWidth="@dimen/_25sdp"
                                android:minHeight="@dimen/_35sdp"
                                android:padding="@dimen/_2sdp"
                                android:textColor="@color/mlBlack"
                                android:textSize="@dimen/_14sdp" />

                            <EditText
                                android:id="@+id/VerifyCode4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:minWidth="@dimen/_25sdp"
                                android:minHeight="@dimen/_35sdp"
                                android:padding="@dimen/_2sdp"
                                android:textColor="@color/mlBlack"
                                android:textSize="@dimen/_14sdp" />

                            <EditText
                                android:id="@+id/VerifyCode5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:minWidth="@dimen/_25sdp"
                                android:minHeight="@dimen/_35sdp"
                                android:padding="@dimen/_2sdp"
                                android:textColor="@color/mlBlack"
                                android:textSize="@dimen/_14sdp" />

                            <EditText
                                android:id="@+id/VerifyCode6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_7sdp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:inputType="number"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:minWidth="@dimen/_25sdp"
                                android:minHeight="@dimen/_35sdp"
                                android:padding="@dimen/_2sdp"
                                android:textColor="@color/mlBlack"
                                android:textSize="@dimen/_14sdp" />


                        </LinearLayout>


                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginTop="@dimen/_10sdp">

                        <ProgressBar
                            android:id="@+id/progressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_100sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/half_circle_progress_back"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/half_circle_progress" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/mlWhite" />


                        <TextView
                            android:id="@+id/message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_40sdp"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="@string/ElapsedTimeGetSMS"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_9sdp" />

                        <TextView
                            android:id="@+id/TimeElapsed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/message"
                            android:gravity="center"
                            android:maxLines="2"
                            android:text="1:56"
                            android:textColor="@color/colorPrimaryDark"
                            android:textSize="@dimen/_9sdp" />


                    </RelativeLayout>


                </LinearLayout>

            </ScrollView>


        </LinearLayout>

    </FrameLayout>

</layout>
